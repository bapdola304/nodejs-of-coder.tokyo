extends ../layout/common

block content
	.container
		h1 User List
		.d-flex.align-items-center
			a.btn.btn-primary(href="/users/create") Create
			form(action="/users/search", method="GET", class="d-flex p-2 ml-auto")
				input(type="text", name="q", value=keywork, class="form-control") 
				button(type="submit", class="btn btn-primary ml-2") Seach
		table(class="table table-striped")
			thead
				tr
					td Avatar
					td Name
					td Age
					td Action
			tbody
				each user in users
					tr
						td
							image(src=user.avatar, width="64")
						td= user.name
						td= user.age
						td
							a(href="/users/delete/" + user.name) Delete